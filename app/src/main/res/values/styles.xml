<resources>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/accent_translucent</item>
        <!-- textos -->
        <item name="android:windowBackground">@color/window</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

    </style>

    <!-- Section Heading -->
    <style name="HeaderSection" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/section_title</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleDetail" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_list_margin</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ItemDetail" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_list_margin</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Card Items -->
    <style name="CardView.Title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardView.Title.Span" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="CardView.Status" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardView.Status.Span" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!-- Tabla -->
    <style name="ItemTableTitle" parent="TextAppearance.AppCompat.Small">
        <item name="android:padding">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="ItemTable" parent="TextAppearance.AppCompat.Small">
        <item name="android:padding">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>


    <!--
    - View: Acerca de...
    -->
    <!-- Title -->
    <style name="AcercaDe.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- Sub Title -->
    <style name="AcercaDe.SubTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- ImageView -->
    <style name="AcercaDe.Image.Logo" parent="">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>
    <!-- Sub Title -->
    <style name="AcercaDe.SubTitleDev" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- Sub Title -->
    <style name="AcercaDe.DevList" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AcercaDe.DevListLink" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/linea_a</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
